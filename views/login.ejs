<% layout('../layouts/boilerplate') %>
<!-- <div class="container d-flex justify-content-center align-items-center mt-5"> -->
    <div class="row form-container">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <!-- <div class = "col-md-6"></div> -->
            <div class="card shadow">
                <img class = "card-img-top login-img" src="https://res.cloudinary.com/duhazr5mo/image/upload/v1705277110/elizabeth-sunset_hso3qs.jpeg" alt="sunset-image">
                <div class="card-body">
                    <h5 class = "card-title">Admin Login</h5>
                    <form action="/users/login" class ="validatedForm" novalidate method = "POST">
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" name="username" id="username" required autofocus>
                            <div class = "valid-feedback">Looks Good</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" name="password" id="password" required>
                            <div class = "valid-feedback">Looks Good</div>
                        </div>
                        <div class = "d-grid gap-2">
                        <button class = "btn btn-success">Login</button>
                        </div>
                    </form>
                </div>
            

            </div>
        </div>
    </div>